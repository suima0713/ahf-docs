{
  "as_of": "2025-01-15",
  "cards": [
    {
      "id": "platform_mix_analysis",
      "inputs": ["Q1_Apple_pct", "Q1_Google_pct", "Q1_Stripe_pct", "Q2_Apple_pct", "Q2_Google_pct", "H1_Stripe_pct"],
      "expr": "((Q2_Apple_pct + Q2_Google_pct) - (Q1_Apple_pct + Q1_Google_pct + Q1_Stripe_pct)) / 100",
      "gates": {
        "up": ">=0.01",
        "down": "<-0.01"
      },
      "description": "プラットフォーム依存度の変化（A/G合計の増減）"
    },
    {
      "id": "ai_cost_impact",
      "inputs": ["GM_QoQ_change", "AI_cost_QoQ_explanation", "AI_cost_YoY_explanation"],
      "expr": "GM_QoQ_change > 0 AND AI_cost_QoQ_explanation = 'lower_than_expected'",
      "gates": {
        "up": "true",
        "down": "false"
      },
      "description": "AIコスト最適化によるGM改善の確認"
    },
    {
      "id": "advertising_gm_contribution",
      "inputs": ["Ad_revenue_Q2", "Total_revenue_Q2", "Ad_cost_policy"],
      "expr": "(Ad_revenue_Q2 / Total_revenue_Q2) * 100",
      "gates": {
        "up": ">=8.0",
        "down": "<5.0"
      },
      "description": "広告収入の売上比率（GM押上げ効果の指標）"
    },
    {
      "id": "deferred_revenue_maturity",
      "inputs": ["DR_current_liability", "DR_12_month_policy"],
      "expr": "DR_current_liability AND DR_12_month_policy",
      "gates": {
        "up": "true",
        "down": "false"
      },
      "description": "契約負債の満期性確認（流動負債×12ヶ月内認識）"
    },
    {
      "id": "segment_structure_impact",
      "inputs": ["Single_segment_structure", "Segment_gross_margin_disclosure"],
      "expr": "Single_segment_structure AND NOT Segment_gross_margin_disclosure",
      "gates": {
        "up": "true",
        "down": "false"
      },
      "description": "単一セグメント構造による粗利内訳非開示の確認"
    },
    {
      "id": "platform_dependency_risk",
      "inputs": ["Apple_pct", "Google_pct", "Stripe_pct"],
      "expr": "(Apple_pct + Google_pct) / 100",
      "gates": {
        "up": ">=0.85",
        "down": "<0.80"
      },
      "description": "主要プラットフォーム依存度（Apple+Google合計）"
    },
    {
      "id": "credit_facility_strength",
      "inputs": ["US_revolver_amount", "China_facility_amount", "CZB_terminated"],
      "expr": "US_revolver_amount > 0 AND China_facility_amount > 0 AND CZB_terminated = true",
      "gates": {
        "up": "true",
        "down": "false"
      },
      "description": "資金調達構造の強化（USリボ新設・中国再編・旧契約終了）"
    }
  ]
}
