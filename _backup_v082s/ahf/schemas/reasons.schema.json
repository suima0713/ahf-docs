{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AHF MVP4 Gap Reasons",
  "type": "object",
  "properties": {
    "field": {"type": "string", "description": "Field name that has data gap"},
    "status": {"type": "string", "enum": ["data_gap"], "description": "Status indicating data gap"},
    "reason": {
      "type": "string", 
      "enum": ["NOT_DISCLOSED", "DIFF_PERIOD", "TAG_ABSENT", "PHRASE_NOT_FOUND"],
      "description": "Reason for data gap"
    },
    "ttl_days": {"type": "integer", "minimum": 1, "description": "Time to live in days for gap resolution"}
  },
  "required": ["field", "status", "reason", "ttl_days"]
}
