[
  {
    "id": "coverage_ratio",
    "inputs": ["RPO_total", "RPO_le12m_pct", "Guidance_FY26_total_revenue_mid"],
    "expr": "(RPO_total*(RPO_le12m_pct/100))/Guidance_FY26_total_revenue_mid",
    "gates": {"up": ">=0.90", "down": "<0.60"},
    "note": "暫定運用：分母未了（FY26 mid）・分子未了（RPO同等）のときは未計算"
  },
  {
    "id": "contract_liabilities_roll_check",
    "inputs": ["ContractLiab_opening", "ContractLiab_additions", "ContractLiab_recognized", "ContractLiab_ending"],
    "expr": "abs((ContractLiab_opening+ContractLiab_additions-ContractLiab_recognized)-ContractLiab_ending) <= 1",
    "gates": {"up": true, "down": false}
  },
  {
    "id": "structure_card",
    "inputs": ["TAM_size", "non_substitutable_score"],
    "expr": "TAM_size * non_substitutable_score",
    "gates": {"up": ">=70", "down": "<50"},
    "note": "S×Q×Vカード：構造（TAM×非代替性）"
  },
  {
    "id": "quality_card",
    "inputs": ["revenue_quality_score", "cash_flow_stability"],
    "expr": "revenue_quality_score * cash_flow_stability",
    "gates": {"up": ">=50", "down": "<30"},
    "note": "S×Q×Vカード：傾き（収益質×CF安定性）"
  },
  {
    "id": "valuation_card",
    "inputs": ["delta_irr_bp"],
    "expr": "delta_irr_bp",
    "gates": {"up": ">=700", "down": "<300"},
    "note": "S×Q×Vカード：バリュエーション（ΔIRR bp）"
  },
  {
    "id": "pilot_buy_rule",
    "inputs": ["structure_card", "quality_card", "valuation_card", "redline_status"],
    "expr": "structure_card >= 70 && quality_card >= 50 && valuation_card >= 700 && redline_status == 'clean'",
    "gates": {"up": true, "down": false},
    "note": "Pilot Buy ルール：S≥70・Q≥50・ΔIRR≥+700bp・レッドライン無。サイズ：標準の1/4開始"
  },
  {
    "id": "coverage_proxy_range_hplus",
    "inputs": ["ntm_deferred_revenue_amortization", "samsung_annual_recurring_131m", "guidance_FY25_revenue_mid_adj"],
    "expr": "[(ntm_deferred_revenue_amortization/guidance_FY25_revenue_mid_adj), ((ntm_deferred_revenue_amortization+samsung_annual_recurring_131m)/guidance_FY25_revenue_mid_adj)]",
    "gates": {"up": ">=0.90", "down": "<0.30"},
    "note": "H+ Coverageプロキシレンジ：下限=NTM$178.3m/550、上限=(NTM$178.3m+Samsung$131m)/550"
  },
  {
    "id": "evidence_adaptive_weighting",
    "inputs": ["neutral_start", "durability_evidence", "slope_evidence", "uncertainty_penalty_6m", "uncertainty_penalty_1y", "uncertainty_penalty_3y", "uncertainty_penalty_5y"],
    "expr": "neutral_start + durability_evidence + slope_evidence - uncertainty_penalty",
    "gates": {"up": ">=0.60", "down": "<0.50"},
    "note": "EAW方式：中立0.50起点から証拠に応じて±動かす。①+0.10（非流動繰延厚み+契約期日T1）+②+0.10（固定料優位+FCF整合）-U減点（期間別係数）"
  },
  {
    "id": "eaw_weight_by_horizon",
    "inputs": ["base_weight", "evidence_plus", "uncertainty_penalty_6m", "uncertainty_penalty_1y", "uncertainty_penalty_3y", "uncertainty_penalty_5y"],
    "expr": "[base_weight + evidence_plus - uncertainty_penalty_6m, base_weight + evidence_plus - uncertainty_penalty_1y, base_weight + evidence_plus - uncertainty_penalty_3y, base_weight + evidence_plus - uncertainty_penalty_5y]",
    "gates": {"up": ">=0.60", "down": "<0.50"},
    "note": "w₁₂（6M/1Y/3Y/5Y）= 0.50/0.60/0.60/0.55。観測に応じて重み可変"
  },
  {
    "id": "h1_floor_reset_test",
    "inputs": ["fy26_rpo_q2", "next_q_fy26_rpo", "samsung_footnote_mention"],
    "expr": "(next_q_fy26_rpo >= fy26_rpo_q2 + 100000) && samsung_footnote_mention",
    "gates": {"up": true, "down": false},
    "note": "H1テスト：次10-QでFY26行+≥$100mかつSamsung脚注言及確認"
  },
  {
    "id": "h2_fixed_fee_sustainability",
    "inputs": ["q1_fixed_ratio_pct", "q2_fixed_ratio_pct", "next_q_fixed_ratio_pct"],
    "expr": "q1_fixed_ratio_pct >= 90 && q2_fixed_ratio_pct >= 90 && next_q_fixed_ratio_pct >= 90",
    "gates": {"up": true, "down": false},
    "note": "H2テスト：Fixed比率≥90%連続確認、失敗条件<85%"
  },
  {
    "id": "fy26_rpo_growth_trend",
    "inputs": ["fy26_rpo_q1", "fy26_rpo_q2"],
    "expr": "fy26_rpo_q2 - fy26_rpo_q1",
    "gates": {"up": ">=50000", "down": "<20000"},
    "note": "FY26 RPO成長：Q1→Q2の増分監視"
  },
  {
    "id": "fixed_fee_ratio_improvement",
    "inputs": ["q1_fixed_ratio_pct", "q2_fixed_ratio_pct"],
    "expr": "q2_fixed_ratio_pct - q1_fixed_ratio_pct",
    "gates": {"up": ">=0.05", "down": "<-0.05"},
    "note": "固定料金比率の改善：Q1→Q2の変化監視"
  },
  {
    "id": "rpo_q1_q2_growth",
    "inputs": ["rpo_q1_row", "rpo_q2_row"],
    "expr": "rpo_q2_row - rpo_q1_row",
    "gates": {"up": ">=50000", "down": "<20000"},
    "note": "RPO成長：Q1→Q2の増分監視（362,495k→425,298k）"
  },
  {
    "id": "revenue_mix_consistency",
    "inputs": ["rev_fixed_q1", "rev_royalty_q1", "rev_other_q1", "rev_fixed_q2", "rev_royalty_q2", "rev_other_q2"],
    "expr": "[(rev_fixed_q1/(rev_fixed_q1+rev_royalty_q1+rev_other_q1))*100, (rev_fixed_q2/(rev_fixed_q2+rev_royalty_q2+rev_other_q2))*100]",
    "gates": {"up": ">=95", "down": "<90"},
    "note": "収益構成の一貫性：固定料金比率の四半期比較"
  },
  {
    "id": "samsung_recurring_validation",
    "inputs": ["samsung_qtr_33m"],
    "expr": "samsung_qtr_33m * 4",
    "gates": {"up": ">=130", "down": "<120"},
    "note": "Samsung年次リカーリング検証：四半期$33m×4=$132m"
  },
  {
    "id": "renewal_risk_assessment",
    "inputs": ["renewal_map"],
    "expr": "renewal_map",
    "gates": {"up": "<=100", "down": ">150"},
    "note": "更新リスク評価：2025年末満了$100mの影響度"
  },
  {
    "id": "H1_fy26_floor_upreset",
    "inputs": ["next_10q_note2_fy26_delta_kUSD", "footnote_mentions_samsung"],
    "expr": "next_10q_note2_fy26_delta_kUSD >= 100000",
    "gates": {"up": true, "down": false},
    "note": "H1: FY26床上方リセット。Q2脚注からSamsung言及消失、6/30時点RPOは裁定後全量未反映の可能性"
  },
  {
    "id": "H2_fixed_mix_ge_90pct",
    "inputs": ["consecutive_quarters_fixed_pct"],
    "expr": "consecutive_quarters_fixed_pct >= 90",
    "gates": {"up": true, "down": false},
    "note": "H2: 固定支払中心。Note3両期ともcatch-up除外で固定比率>99%"
  },
  {
    "id": "H3_renewals_flat_to_up_0_10",
    "inputs": ["each_renewal"],
    "expr": "each_renewal >= 0",
    "gates": {"up": ">=0", "down": "<-10"},
    "note": "H3: 更新据置〜上方改定。大型先例（Samsung裁定）によるプレシデント効果"
  },
  {
    "id": "H4_mispricing_ev_over_floor",
    "inputs": ["rpo_upreset", "fixed_ge_90pct"],
    "expr": "rpo_upreset && fixed_ge_90pct",
    "gates": {"up": true, "down": false},
    "note": "H4: バリュエーション割安。EV/(FY26 RPO + NTM繰延償却)がピア比割安なら認知ギャップ"
  },
  {
    "id": "H5_seasonality_down_guidance_mape_down",
    "inputs": ["next_calls"],
    "expr": "next_calls >= 2",
    "gates": {"up": ">=2", "down": "<1"},
    "note": "H5: 季節性縮小。CFOが$33m/quarter定点、季節性縮小でMAPE低下"
  },
  {
    "id": "ev_over_floor",
    "inputs": ["ev_usd","floor_low_kUSD","floor_high_kUSD"],
    "expr": "ev_usd/(1000*avg(floor_low_kUSD,floor_high_kUSD))",
    "gates": {"up": "<=10.0", "down": ">=20.0"},
    "note": "EV/Floor比率：バリュエーション割安度の測定"
  },
  {
    "id": "disagg_fixed_ratio_2Q",
    "inputs": ["fixed_ratio_q1_pct","fixed_ratio_q2_pct"],
    "expr": "min(fixed_ratio_q1_pct,fixed_ratio_q2_pct)",
    "gates": {"up": ">=90", "down": "<85"},
    "note": "2Q固定料金比率最小値：収益質の持続性確認"
  },
  {
    "id": "fy26_floor_with_samsung_shadow",
    "inputs": ["fy26_contracted_revenue", "fy26_floor_add_samsung"],
    "expr": "fy26_contracted_revenue + (fy26_floor_add_samsung * 0.75)",
    "gates": {"up": ">=500000", "down": "<400000"},
    "shadow_expr": "fy26_contracted_revenue + shadow_contributions",
    "shadow_inputs": ["fy26_floor_add_samsung"],
    "shadow_note": "T1+U重み付け計算対応：Samsung $131m/yr × 確度75%",
    "note": "FY26フロア（Samsung影込み）：T1実線 + U点線レンジ"
  },
  {
    "id": "ev_over_floor_with_shadow",
    "inputs": ["ev_usd", "fy26_floor_with_samsung_shadow"],
    "expr": "ev_usd / fy26_floor_with_samsung_shadow",
    "gates": {"up": "<=15.0", "down": ">=25.0"},
    "shadow_expr": "ev_usd / (fy26_contracted_revenue + shadow_contributions)",
    "shadow_inputs": ["fy26_floor_add_samsung"],
    "shadow_note": "T1+U重み付け計算対応：確度込みの上振れ余地を可視化",
    "note": "EV/Floor比率（影込み）：確度込みの上振れ余地が一目で分かる"
  }
]