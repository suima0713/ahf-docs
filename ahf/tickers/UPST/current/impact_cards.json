[
  {
    "id": "ev_over_gp_floor",
    "inputs": ["enterprise_value", "gross_profit_floor"],
    "expr": "enterprise_value / gross_profit_floor",
    "gates": { "up": "<=1.5", "down": ">=2.0" }
  },
  {
    "id": "conversion_health",
    "inputs": ["conversion_rate", "target_conversion_rate"],
    "expr": "100 * conversion_rate / target_conversion_rate",
    "gates": { "up": ">=70", "down": "<50" }
  },
  {
    "id": "funding_capacity_cover",
    "inputs": ["funding_capacity", "required_funding"],
    "expr": "funding_capacity / required_funding",
    "gates": { "up": ">=2.0", "down": "<1.5" }
  },
  {
    "id": "guidance_mape",
    "inputs": ["guidance_q3_2024", "actual_q3_2024"],
    "expr": "100*abs(actual_q3_2024 - guidance_q3_2024)/guidance_q3_2024",
    "gates": { "up": "<=5", "down": ">=10" }
  },
  {
    "id": "fcf_conversion",
    "inputs": ["operating_cash_flow_h1_2025", "revenue_ttm"],
    "expr": "100*abs(operating_cash_flow_h1_2025)/revenue_ttm",
    "gates": { "up": ">=70", "down": "<50" }
  },
  {
    "id": "capex_intensity",
    "inputs": ["capex_q3_2024", "revenue_ttm"],
    "expr": "100*capex_q3_2024/revenue_ttm",
    "gates": { "up": "<=5", "down": ">8" }
  },
  {
    "id": "cfo_ebitda_gap_ratio",
    "inputs": ["cfo_ebitda_gap_q3_25", "adj_ebitda_q3_25"],
    "expr": "abs(cfo_ebitda_gap_q3_25) / adj_ebitda_q3_25",
    "gates": { "up": "<=0.20", "down": ">=0.40" }
  },
  {
    "id": "working_capital_drag_ratio",
    "inputs": ["working_capital_cash_impact_q3_25", "cfo_ebitda_gap_q3_25"],
    "expr": "abs(working_capital_cash_impact_q3_25) / abs(cfo_ebitda_gap_q3_25)",
    "gates": { "up": ">=1.20", "down": "<1.00" }
  },
  {
    "id": "contract_liabilities_drag_pct",
    "inputs": ["contract_liabilities_decrease_q3_25", "working_capital_cash_impact_q3_25"],
    "expr": "100 * abs(contract_liabilities_decrease_q3_25) / abs(working_capital_cash_impact_q3_25)",
    "gates": { "up": ">=65", "down": "<50" }
  },
  {
    "id": "unbilled_receivables_drag_pct",
    "inputs": ["unbilled_receivables_increase_q3_25", "working_capital_cash_impact_q3_25"],
    "expr": "100 * abs(unbilled_receivables_increase_q3_25) / abs(working_capital_cash_impact_q3_25)",
    "gates": { "up": ">=25", "down": "<15" }
  },
  {
    "id": "working_capital_positive_impact_pct",
    "inputs": ["inventory_decrease_q3_25", "billed_ar_decrease_q3_25", "working_capital_cash_impact_q3_25"],
    "expr": "100 * (inventory_decrease_q3_25 + billed_ar_decrease_q3_25) / abs(working_capital_cash_impact_q3_25)",
    "gates": { "up": ">=2.0", "down": "<1.0" }
  },
  {
    "id": "alpha4_gate_rpo_12m_cover",
    "inputs": ["rpo_total", "rpo_le12m_pct", "guidance_fy26_total_revenue_mid"],
    "expr": "(rpo_total*(rpo_le12m_pct/100))/guidance_fy26_total_revenue_mid",
    "gates": { "up": ">=11.0", "down": "<11.0" },
    "description": "RPO 12M カバー ≥ 11.0 ヶ月（可視性 Pass/Fail）"
  },
  {
    "id": "alpha5_band_opex_green",
    "inputs": ["opex_q3_25"],
    "expr": "opex_q3_25",
    "gates": { "up": "<=83000", "down": ">83000" },
    "description": "Green ≤ $83,000k（OpEx帯域評価）"
  },
  {
    "id": "alpha5_band_opex_amber",
    "inputs": ["opex_q3_25"],
    "expr": "opex_q3_25",
    "gates": { "up": "<=86500", "down": ">86500" },
    "description": "Amber ≤ $86,500k（OpEx帯域評価）"
  },
  {
    "id": "alpha3_sensitivity_mix_to_gm",
    "inputs": ["delta_sw", "delta_ops"],
    "expr": "0.60 * delta_sw - 0.18 * delta_ops",
    "gates": { "up": ">=0", "down": "<0" },
    "description": "ΔGM(pp)=0.60·ΔSW − 0.18·ΔOps（Mix→GM）"
  },
  {
    "id": "star_up_condition_gb_deferred",
    "inputs": ["gb_deferred_change", "gb_revenue", "gb_deferred_prior", "cl_qoq", "unbilled_qoq"],
    "expr": "if(gb_deferred_change < 0 and gb_revenue >= 0.25 * gb_deferred_prior, 0.5, 0) + if(cl_qoq >= 5 or unbilled_qoq <= 0, 0.5, 0)",
    "gates": { "up": ">=0.5", "down": "<0.5" },
    "description": "GB Deferred↓ かつ GB収益 ≥ 25%×前期Deferred または CL_qoq≥+5% or Unbilled_qoq≤0%（+0.5★ / +5pp候補）"
  },
  {
    "id": "star_down_condition_cl_ops",
    "inputs": ["cl_qoq", "dou", "ops_change"],
    "expr": "if(cl_qoq <= 0 and dou >= 40, -0.5, 0) + if(ops_change >= 3, -0.5, 0)",
    "gates": { "up": ">=-0.5", "down": "<-0.5" },
    "description": "CL_qoq≤0%（連続） かつ DoU≥40日 または Ops +≥3pp（−0.5★ / −5pp候補）"
  },
  {
    "id": "gm_to_ebitda_conversion_590k",
    "inputs": ["revenue_590k", "delta_gm_pp"],
    "expr": "revenue_590k * delta_gm_pp / 100 * 5.9",
    "gates": { "up": ">=0", "down": "<0" },
    "description": "売上$590k時：1pp(GM)あたりEBITDA $5,900k"
  },
  {
    "id": "gm_to_ebitda_conversion_600k",
    "inputs": ["revenue_600k", "delta_gm_pp"],
    "expr": "revenue_600k * delta_gm_pp / 100 * 6.0",
    "gates": { "up": ">=0", "down": "<0" },
    "description": "売上$600k時：1pp(GM)あたりEBITDA $6,000k"
  },
  {
    "id": "gm_to_ebitda_conversion_610k",
    "inputs": ["revenue_610k", "delta_gm_pp"],
    "expr": "revenue_610k * delta_gm_pp / 100 * 6.1",
    "gates": { "up": ">=0", "down": "<0" },
    "description": "売上$610k時：1pp(GM)あたりEBITDA $6,100k"
  },
  {
    "id": "tripwire_priority_1_contract_liabilities",
    "inputs": ["cl_qoq", "cl_trend"],
    "expr": "if(cl_qoq >= 0, 1, 0)",
    "gates": { "up": ">=1", "down": "<1" },
    "description": "優先1位：Contract Liabilities（CL）方向 - 同時発火時は最上位のみで★/確信度を動かす"
  },
  {
    "id": "tripwire_priority_2_greenbox_rollforward",
    "inputs": ["gb_deferred_change", "gb_unbilled_change", "gb_digestion_rate"],
    "expr": "if(gb_deferred_change < 0 and gb_digestion_rate > 0, 1, 0)",
    "gates": { "up": ">=1", "down": "<1" },
    "description": "優先2位：GreenBoxロールフォワード（Deferred/UB/消化） - 他はメモに留める"
  },
  {
    "id": "tripwire_priority_3_dou_unbilled",
    "inputs": ["dou", "unbilled_share"],
    "expr": "if(dou <= 30 and unbilled_share <= 50, 1, 0)",
    "gates": { "up": ">=1", "down": "<1" },
    "description": "優先3位：DoU / Unbilled 指数 - 他はメモに留める"
  },
  {
    "id": "tripwire_priority_4_mix_sw_ops",
    "inputs": ["delta_sw", "delta_ops"],
    "expr": "0.60 * delta_sw - 0.18 * delta_ops",
    "gates": { "up": ">=0", "down": "<0" },
    "description": "優先4位：Mix（ΔSW/ΔOps） - 他はメモに留める"
  },
  {
    "id": "ot_pt_proxy_service_ot_lower_bound",
    "inputs": ["service_ot_actual", "service_ot_pct"],
    "expr": "service_ot_actual",
    "gates": { "up": ">=33013", "down": "<33013" },
    "description": "Service OT下限 $33,013k（5.6%） - 10-Q/10-Kの方針（SW/OPSはOT）"
  },
  {
    "id": "ot_pt_proxy_unbilled_share",
    "inputs": ["unbilled_receivables", "accounts_receivable", "unbilled_share_pct"],
    "expr": "unbilled_share_pct",
    "gates": { "up": "<=50", "down": ">50" },
    "description": "Unbilledシェア 63.4% → ≤50%目標 - Unbilled / (AR+Unbilled)"
  },
  {
    "id": "ot_pt_proxy_dou_days",
    "inputs": ["unbilled_receivables", "quarterly_revenue", "dou_days"],
    "expr": "dou_days",
    "gates": { "up": "<=30", "down": ">30" },
    "description": "DoU（未請求日数）35.9日 → ≤30日目標 - 未請求／四半期売上×90"
  },
  {
    "id": "ot_pt_proxy_cl_qoq_trend",
    "inputs": ["contract_liabilities_decrease_q3_25", "cl_qoq_pct"],
    "expr": "cl_qoq_pct",
    "gates": { "up": ">=0", "down": "<0" },
    "description": "CL_qoq −171,331k → ≥0%（連続）目標 - 契約負債のQoQ"
  }
]
