{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AHF v2 Edge Overlay Schema",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "source": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": { "type": "string", "enum": ["rating_agency", "issuer_pr", "regulator"] },
        "name": { "type": "string" },
        "url": { "type": "string" },
        "asof": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" }
      },
      "required": ["type", "name", "url", "asof"]
    }
  },
  "properties": {
    "kpi": { "type": "string", "minLength": 1 },
    "p_value": { "type": ["number", "string"] },
    "unit": { "type": "string", "enum": ["USD", "percent", "text", "date", "count"] },
    "asof": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "p_confidence": { "type": "number", "minimum": 0.0, "maximum": 0.49 },
    "sources": {
      "type": "array",
      "items": { "$ref": "#/definitions/source" },
      "minItems": 1
    },
    "note": { "type": "string" }
  },
  "required": ["kpi", "p_value", "unit", "asof", "p_confidence", "sources", "note"]
}
